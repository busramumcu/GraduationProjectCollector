
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AnaLayout.cshtml";
}
    
<link href="~/Content/ImageStyle.css" rel="stylesheet" />
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#http://bilmuh.ege.edu.tr/" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="item peopleCarouselImg">
                    <img src="~/Content/Images/bilmuh_foto1.jpg" alt="BilmuhFoto" style="width:100%;">
                </div>
            </div>

            <div class="item">
                <div class="item peopleCarouselImg">
                    <img src="chicago.jpg" alt="Chicago" style="width:100%;">
                </div>
            </div>

            <div class="item">
                <div class="item peopleCarouselImg">
                    <img src="ny.jpg" alt="New york" style="width:100%;">
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
