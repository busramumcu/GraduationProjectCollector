@using Web_Projesi.Models
@model List<Gorev>
@{
    ViewBag.Title = "OgrenciGorevListele";
    Layout = "~/Views/Shared/_LoggedOgrenciLayout.cshtml";
}


@if (ViewBag.Message != null)
{
    <label style="color:red">@ViewBag.Message</label>
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Görev Listesi</h1>
    <div>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Gorev Adı</th>
                        <th>Açıklama</th>
                        <th>Başlangıç Tarihi</th>
                        <th>Bitiş Tarihi</th>
                        <th>Dosya İşlemleri</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model.ElementAt(i).Gorev_Adi</td>
                            <td>@Model.ElementAt(i).Aciklama</td>
                            <td>@Model.ElementAt(i).S_Date</td>
                            <td>@Model.ElementAt(i).E_Date</td>
                            @if (Model.ElementAt(i).E_Date > DateTime.Now)
                            {
                                <td><a href="/LoggedOgrenci/GorevDosyaYukle?gorev_Id=@Model.ElementAt(i).Gorev_Id">Dosya Yükle</a></td>
                            }
                            else
                            {
                                <td style="color:red">Görev Süresi Doldu</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>



