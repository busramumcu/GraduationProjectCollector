@using Web_Projesi.Models
@model Tez
@{
    ViewBag.Title = "TezDuzenle";
    Layout = "~/Views/Shared/_LoggedOgrenciLayout.cshtml";
}

@if (ViewBag.Message != null)
{
    <label style="color:red">@ViewBag.Message</label>
}

@using (Html.BeginForm("TezGuncelle", "LoggedOgrenci", null, FormMethod.Post))
{
    <form>
        <div class="form-group">
            <label for="Ogrenci_Id">Ogrenci Id</label>
            <input type="text" class="form-control" name="Ogrenci_Id" placeholder="Ogrenci_Id" value="@Model.Ogrenci_Id" />
        </div>
        <div class="form-group">
            <label for="Danisman_Id">Danışman Id</label>
            <input type="text" class="form-control" name="Danisman_Id" placeholder="Danisman_Id" value="@Model.Danisman_Id" />
        </div>
        <div class="form-group">
            <label for="Abstract">Abstract</label>
            <input type="text" class="form-control" name="Abstract" placeholder="Abstract" value="@Model.Abstract" />
        </div>
        <div class="form-group">
            <label for="Donem">Donem</label>
            <input type="text" class="form-control" name="Donem" placeholder="Donem" value="@Model.Donem" />
        </div>
        <input class="btn btn-primary" style="margin-left:10px" type="submit" value="Güncelle" />

    </form>

}
