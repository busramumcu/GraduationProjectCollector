
        @if (User.Identity.IsAuthenticated)
            {
                using (Html.BeginForm("SignOut", "Login", FormMethod.Post, new { @class = "form-horizantal", role = "form" }))
                {
                <div class="form-group">                    
                        <h6>Welcome user @(User.Identity.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest")</h6>
                        <input class="btn btn-primary" type="submit" value="Log Out" />                  
                </div>

            }
        }
        else
        {
            using (Html.BeginForm("Login", "Login", FormMethod.Get, new { @class = "form-horizantal", role = "form" }))
            {
                <div class="form-group">                 
                        <input class="btn btn-primary" style="float:left; " type="submit" value="Log In" />                   
                </div>

            }
            using (Html.BeginForm("Register", "Login", FormMethod.Get, new { @class = "form-horizantal", role = "form" }))
            {
                <div class="form-group">                 
                        <input class="btn btn-primary" style="margin-left:10px"  type="submit" value="Register" />
                </div>

            }

        }

